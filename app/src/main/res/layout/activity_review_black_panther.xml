<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ReviewBlackPanther"
        android:background="@color/colorBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:context=".ReviewBlackPanther">


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorTaskBar"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Black Panther"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/movie1"
                        android:layout_width="81dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:src="@drawable/blackpanther"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="64dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date released:16 February 2018"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/genre1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Genre: Action, Adventure"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imdb1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="13dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/imdb" />

                                <TextView
                                    android:id="@+id/imdbrating1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9.0/10"
                                    android:textColor="@color/colorWhite" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/rottentomatoes1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/rottentomato" />

                                <TextView
                                    android:id="@+id/rottentomatoesrating1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="84%"
                                    android:textColor="@color/colorWhite" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp"
                                android:onClick="watchtrailerblackpanther">

                            <ImageView
                                android:id="@+id/addtrailerblackpanther"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/youtubeicon"
                                android:layout_marginLeft="20dp"/>

                                <TextView
                                    android:id="@+id/trailertxtblackpanther"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="Watch Trailer"
                                    android:textColor="@color/colorWhite"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/generalrating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General ratings:"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="4/5"
                        android:id="@+id/generalratingnum1"
                        android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sypnosis1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sypnosis:"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:background="@color/colorTaskBar"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sypnosisbox1"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/commentbox"
                            android:padding="40dp"
                            android:paddingTop="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/sypnosisblackpanther"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sypnosisblackpanther"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>


                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/actorsset1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actors:"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorTaskBar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/actor1blackpanther"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/actor1" />

                    <ImageView
                        android:id="@+id/actor2blackpanther"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/actor2" />

                    <ImageView
                        android:id="@+id/actor3blackpanther"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/actor3" />

                    <ImageView
                        android:id="@+id/actor4blackpanther"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/actor4" />

                    <ImageView
                        android:id="@+id/actor5blackpanther"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/actor5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/addreviewbtn1"
                        android:layout_width="152dp"
                        android:layout_height="71dp"
                        android:layout_marginStart="40dp"
                        android:background="@android:color/transparent"
                        android:onClick="moveToAddReview"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addreviewfill" />

                    <ImageButton
                        android:id="@+id/addcalendarbtn1"
                        android:layout_width="152dp"
                        android:layout_height="71dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:onClick="calenderEvent1"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addtocalendarfill" />

                </LinearLayout>


                <TextView
                    android:id="@+id/recentreviews1title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent reviews"
                    android:background="@color/colorTaskBar"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/reviewer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:layout_marginTop="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/blackpantherrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratings:"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/userrating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:text="3/5"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/blackpanthercomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments:"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/commentbox1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/commentbox"
                        android:padding="40dp"
                        android:paddingTop="20dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/blackpanthercomment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="43dp"
                        android:text="@string/commentblackpanther"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />


                </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/reviewer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User not available"
                        android:textColor="@color/colorWhite"
                        android:textSize="30sp"
                        android:layout_marginTop="20sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/blackpantherrating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ratings:"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/userrating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:text="Unavailable"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/blackpanthercomment2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments:"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/commentboxnewuser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/commentbox"
                            android:padding="40dp"
                            android:paddingTop="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/blackpanthercomment3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="43dp"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>



