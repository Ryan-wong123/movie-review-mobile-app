<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReviewWreckItRalph"
    android:background="@color/colorBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:context=".ReviewWreckItRalph">


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTaskBar"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wreck-It Ralph 2"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/moviepicwreck"
                        android:layout_width="81dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:src="@drawable/wreckitralph"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="64dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/datereleased2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date released:21 November 2018"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/genre2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Genre:Fantasy/Science fiction film"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imdb2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:padding="13dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/imdb" />

                                <TextView
                                    android:id="@+id/imdbrating2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TBD"
                                    android:textColor="@color/colorWhite" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp">

                                <ImageView
                                    android:id="@+id/rottentomatoes2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/rottentomato" />

                                <TextView
                                    android:id="@+id/rottentomatoesrating2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unavailable"
                                    android:textColor="@color/colorWhite" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp"
                                android:onClick="watchtrailerwreck">

                                <ImageView
                                    android:id="@+id/addtrailerwreck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/youtubeicon"
                                    android:layout_marginLeft="20dp"/>

                                <TextView
                                    android:id="@+id/trailertxtwreck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="Watch Trailer"
                                    android:textColor="@color/colorWhite"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="General ratings:"
                        android:id="@+id/generalrating2"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/generalratingwreck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Unavailable"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Sypnosis:"
                        android:background="@color/colorTaskBar"
                        android:textSize="18sp"
                        android:id="@+id/sypnosis2"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sypnosisbox3"
                            android:layout_width="match_parent"
                            android:layout_height="111dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/commentbox"
                            android:padding="40dp"
                            android:layout_marginTop="5dp"
                            android:paddingTop="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/sypnosiswreckitralph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/sypnosiswreckitralph"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Actors:"
                    android:background="@color/colorTaskBar"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/actorsset2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:src="@drawable/jackbruyer"
                        android:id="@+id/actor1wreck" />

                    <ImageView
                        android:id="@+id/actor2wreck"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/janelynch" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/johnc"
                        android:id="@+id/actor3wreck"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/sarahsilverman"
                        android:id="@+id/actor4wreck" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/taraji"
                        android:id="@+id/actor5wreck"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/addreviewbtn2"
                        android:layout_width="152dp"
                        android:layout_height="71dp"
                        android:background="@android:color/transparent"
                        android:padding="20dp"
                        android:layout_marginStart="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addreviewfill"
                        android:onClick="moveToAddReviewWreck"/>

                    <ImageButton
                        android:id="@+id/addcalendarbtn2"
                        android:layout_width="152dp"
                        android:layout_height="71dp"
                        android:background="@android:color/transparent"
                        android:padding="20dp"
                        android:onClick="calenderEvent2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/addtocalendarfill"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Recent reviews"
                    android:background="@color/colorTaskBar"
                    android:textSize="20sp"
                    android:id="@+id/recentreviews1title2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Sarah"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:id="@+id/reviewer2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wreckratingtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ratings:"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/wreckrating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="3/5"
                        android:textSize="20sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Comments"
                    android:textSize="20sp"
                    android:id="@+id/wreckcomment"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/commentbox2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/commentbox"
                        android:padding="40dp"
                        android:paddingTop="20dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/antmancomment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="52dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/moviecomment3"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addreview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User not available"
                        android:textColor="@color/colorWhite"
                        android:textSize="30sp"
                        android:layout_marginTop="20sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wreckrating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ratings:"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/userratingwreckit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:text="Unavailable"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/wreckcomment2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments:"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/commentboxnewuser3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/commentbox"
                            android:padding="40dp"
                            android:paddingTop="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/wreckcomment3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="43dp"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
