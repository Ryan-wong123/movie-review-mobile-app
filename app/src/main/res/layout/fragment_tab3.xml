<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/antmanpic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/antman"
                    android:padding="10dp"
                    android:onClick="moveToMovie3"/>

                <ImageView
                    android:id="@+id/oceaneightpic"
                    android:layout_width="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_height="150dp"
                    android:background="@drawable/oceaneight"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/theincrediblespic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/theincredibles"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/hereditarypic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/hereditary"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/stsolopic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/stsolo"
                    android:layout_marginBottom="70dp"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/deadpoolpic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/deadpool"
                    android:layout_marginBottom="70dp"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>