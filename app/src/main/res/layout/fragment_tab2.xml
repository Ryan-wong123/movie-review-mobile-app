<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wreckitraplhpic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/wreckitralph"
                    android:padding="10dp"
                    android:onClick="moveToMovie2"/>

                <ImageView
                    android:id="@+id/theequalizerpic"
                    android:layout_width="120dp"
                    android:layout_marginTop="16dp"
                    android:layout_height="150dp"
                    android:background="@drawable/theequalizer"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/thelittlestrangerpic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/thelittlestranger"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/thenunpic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/thenun"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/firstmanpic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/firstman"
                    android:layout_marginBottom="70dp"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/fantasticbeastpic"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/fantasticbeast"
                    android:layout_marginBottom="70dp"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>